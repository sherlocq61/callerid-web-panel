{
    "name": "callerid-web-panel",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "electron": "electron .",
        "electron:dev": "concurrently \"cross-env BROWSER=none next dev\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "next build && electron-builder",
        "dist": "npm run build && electron-builder"
    },
    "main": "electron/main.js",
    "build": {
        "appId": "com.callerid.app",
        "productName": "Çağrı Yönetim Sistemi",
        "directories": {
            "output": "dist"
        },
        "asar": true,
        "files": [
            "src/**/*",
            "electron/**/*",
            "public/**/*",
            "package.json",
            "next.config.js",
            "!node_modules/**/*",
            "node_modules/next/**/*",
            "node_modules/react/**/*",
            "node_modules/react-dom/**/*",
            "node_modules/@supabase/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "electron/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "dependencies": {
        "@supabase/auth-helpers-nextjs": "^0.9.0",
        "@supabase/supabase-js": "^2.39.3",
        "clsx": "^2.1.0",
        "date-fns": "^3.2.0",
        "electron-store": "^11.0.2",
        "framer-motion": "^11.0.3",
        "lucide-react": "^0.556.0",
        "next": "14.1.0",
        "react": "^18.2.0",
        "react-confetti": "^6.4.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.49.3",
        "react-hot-toast": "^2.6.0",
        "react-use": "^17.6.0",
        "tailwind-merge": "^2.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "autoprefixer": "^10.4.17",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "electron-is-dev": "^3.0.1",
        "electron-packager": "^17.1.2",
        "eslint": "^8.56.0",
        "eslint-config-next": "14.1.0",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "wait-on": "^9.0.3"
    }
}
